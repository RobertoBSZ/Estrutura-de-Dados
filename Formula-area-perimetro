typedef struct forma {
    int tipo;
    float area;
    float perimetro;
}forma;

int main()
{
    /*
    struct aluno x = {2, "João"};
    
    printf("Digite a nota do Aluno %s, de matricula %d\n", x.nome, x.matricula);
    scanf("%f", &x.nota);
    
    printf("\nO aluno %s, de matrícula %d, tem a nota %.1f", x.nome, x.matricula, x.nota);
*/
    float resultado;
    int t;
    struct forma x;
    
    printf("\nEscolha seu tipo:\n1-triangulo\n2-quadrado\n3-retangulo\n4-circulo\n5-trapezio\n");
    scanf("%i", &x.tipo);
    
    printf("Escolha o que você quer calcular:\n1-area\n2-perimetro\n");
    scanf("%i", &t);
    
    if(t == 1){
        resultado = calcula_forma_area(x.tipo);
        x.area = resultado;
        printf("Área= %.1f\n", x.area);
    }else{
        resultado = calcula_forma_perimetro(x.tipo);
        x.perimetro = resultado;
        printf("Perimetro= %.1f", x.perimetro);
    };
    
    
    
    
    
    
    
    
    
    return 0;
}
